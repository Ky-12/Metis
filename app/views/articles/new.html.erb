<div class="border p-4">
  <h1 class="h5 mb-4">新規作成</h1>
  <%= form_with model: @article, url: article_create_path do |f| %>
    <fieldset class="mb-4">
      <div class="form-group">
        <%= f.label :title, "タイトル", class: "form-group" %>
        <%= f.text_field :title, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :tags, "タグ(カンマ区切り)", class: "form-group" %>
        <%= f.text_field :tags, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :body, "本文", class: "body" %>
        <%= f.text_area :body, rows: "10", class: "form-control" %>
      </div>
      <div class="mt-5">
        <%= link_to("キャンセル", root_path,method: :get,class:"btn btn-secondary") %>
        <div class="btn-group dropup">
          <%= f.submit " 投稿 " , class: "btn btn-success" %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>